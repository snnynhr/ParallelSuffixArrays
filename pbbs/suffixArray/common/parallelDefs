ifdef OPENMP
PCC = g++
PCFLAGS = -fopenmp -O2 -DOPENMP $(SDSLCF)
PLFLAGS = -fopenmp $(SDSLLF)

else ifdef CILK
PCC = cilk++
PCFLAGS = -O2 -DCILK -Wno-cilk-for $(SDSLCF)
PLFLAGS = $(SDSLLF)

else ifdef MKLROOT
PCC = icpc 
PCFLAGS = -O3 -DCILKP $(SDSLCF)
PLFLAGS = $(SDSLLF)

else
PCC = g++
PLFLAGS = $(LFLAGS) $(SDSLLF)
PCFLAGS = -O2 $(SDSLCF)
endif
